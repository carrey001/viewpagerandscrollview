<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
              android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <cn.com.base.scrollviewandviewpager.test.AutoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>
        </RelativeLayout>
    </FrameLayout>
    <cn.com.base.scrollviewandviewpager.test.TransparentScrollView
        android:id="@+id/scrollview"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:id="@+id/top_transport_view"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="140dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/link_text_material_light"
                android:textSize="18sp"
                android:gravity="center"
                android:text="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/link_text_material_light"
                android:textSize="18sp"
                android:gravity="center"
                android:text="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/link_text_material_light"
                android:textSize="18sp"
                android:gravity="center"
                android:text="1" />


        </LinearLayout>

    </cn.com.base.scrollviewandviewpager.test.TransparentScrollView>


    <cn.com.base.scrollviewandviewpager.test.TransparentView
        android:layout_width="fill_parent"
        android:id="@+id/eventtransparentview"
        android:background="#00000000"
        android:layout_height="0dp" />


</RelativeLayout>
